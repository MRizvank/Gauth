<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f4f4f9;
    }

    .header {
      background-color: #4caf50;
      color: white;
      padding: 15px 20px;
      text-align: center;
      font-size: 24px;
      font-weight: bold;
    }

    .profile-container {
      position: absolute;
      top: 20px;
      right: 20px;
      background-color: white;
      padding: 15px;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      text-align: center;
      width: 200px;
    }

    .profile-container img {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      object-fit: cover;
      border: 3px solid #4caf50;
    }

    .profile-container h1 {
      font-size: 18px;
      margin: 10px 0 5px 0;
      color: #333;
    }

    .profile-container p {
      margin: 5px 0;
      color: #666;
      font-size: 14px;
    }

    .logout-btn {
      display: inline-block;
      padding: 8px 15px;
      background-color: #4caf50;
      color: white;
      text-decoration: none;
      border-radius: 5px;
      transition: background 0.3s ease;
    }

    .logout-btn:hover {
      background-color: #45a049;
    }

    .shorten-url-container {
      max-width: 400px;
      margin: 100px auto 0 auto;
      background-color: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      text-align: center;
    }

    .shorten-url-container h2 {
      margin-bottom: 15px;
      color: #4caf50;
    }

    .shorten-url-container input[type="text"] {
      width: 80%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
      outline: none;
    }

    .shorten-url-container button {
      padding: 10px 20px;
      background-color: #4caf50;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      margin-top: 10px;
      transition: background 0.3s ease;
    }

    .shorten-url-container button:hover {
      background-color: #45a049;
    }

    /* Popup Modal Styles */
    .modal {
      display: none;
      position: fixed;
      z-index: 1000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.6);
      justify-content: center;
      align-items: center;
    }

    .modal-content {
      background-color: white;
      padding: 20px;
      border-radius: 10px;
      text-align: center;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
      width: 300px;
    }

    .modal-content input {
      width: 90%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
      margin-bottom: 10px;
      text-align: center;
    }

    .copy-btn {
      padding: 10px 20px;
      background-color: #4caf50;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background 0.3s ease;
    }

    .copy-btn:hover {
      background-color: #45a049;
    }
  </style>
</head>
<body>
  <div class="header">Dashboard</div>

  <!-- Profile Section -->
  <div class="profile-container">
    <img src="<%= user.photos[0].value %>" alt="Profile Picture" />
    <h1>Welcome, <%= user.displayName %>!</h1>
    <p>Email: <%= user.emails[0].value %></p>
    <a class="logout-btn" href="/logout">Logout</a>
  </div>

  <!-- Shorten URL Section -->
  <div class="shorten-url-container">
    <h2>Shorten URL</h2>
    <form id="shortUrl">
      <input type="text" name="longUrl" placeholder="Enter URL to shorten" required />
      <br />
      <button type="submit">Shorten URL</button>
    </form>
  </div>

  <!-- Popup Modal -->
  <div class="modal" id="popupModal">
    <div class="modal-content">
      <h3>Shortened URL</h3>
      <input type="text" id="shortUrlInput" readonly />
      <button class="copy-btn" id="copyBtn">Copy to Clipboard</button>
    </div>
  </div>

  <script>
    const userEmail = "<%= user.emails[0].value %>"; 
    const form = document.getElementById("shortUrl");
    const modal = document.getElementById("popupModal");
    const shortUrlInput = document.getElementById("shortUrlInput");
    const copyBtn = document.getElementById("copyBtn");

    form.addEventListener("submit", (event) => {
      event.preventDefault(); 

      const dataToSubmit = {
        longUrl: form.longUrl.value,
        topic: "",
        user_mail: userEmail,
      };

      fetch("http://localhost:3000/api/shorten", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify(dataToSubmit),
      })
        .then((res) => res.json())
        .then((response) => {
          shortUrlInput.value = `${response.shortUrl}`;
          modal.style.display = "flex";
        })
        .catch((error) => {
          console.error("Error:", error);
        });
    });

    // Copy to Clipboard Function
    copyBtn.addEventListener("click", () => {
      shortUrlInput.select();
      document.execCommand("copy");

      // Close the modal after copying
      modal.style.display = "none";
    });

    // Close modal when clicking outside the modal content
    window.addEventListener("click", (event) => {
      if (event.target === modal) {
        modal.style.display = "none";
      }
    });
  </script>
</body>
</html>
